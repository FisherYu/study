/**index.wxss**/
.container {
  position: relative;
}
.image-wrap image{
  width: 100%;
}
.homepage-ad-space {
  margin-top: -17%;
  padding: 0 5px 5px;
}
.homepage-ad-space image{
    border: 0;
    border-radius: 3px;
    box-shadow: 0 2px 6px rgba(0,0,0,.14);
}
.homepage-ad-space image+image {
    margin-top: 5px;
}
.apply-btn-wrap {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    padding: 5px 10px;
    background: rgba(255,255,255,.95);
}
.apply-btn-wrap button{
    width: 100%;
    line-height: 40px;
    text-align: center;
    border-radius: 20px;
    color: white;
    font-size: 16px;
    background-color: #cca97a;
    box-shadow: 0 4px 7px rgba(240,201,148,.78);
}